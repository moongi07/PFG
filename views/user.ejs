<div class="perfil-container">
  <div class="perfil-card">
    <h2>Perfil del Usuario</h2>

    <ul class="perfil-datos">
      <li><strong>Nombre de usuario:</strong> <%= username %></li>
      <li><strong>Nombre:</strong> <%= nombre %></li>
      <li><strong>Apellidos:</strong> <%= apellidos %></li>
      <li><strong>Email:</strong> <%= email %></li>
      <li><strong>Teléfono:</strong> <%= telefono %></li>
    </ul>

<div class="botones">
  <button onclick="toggleForm()">Editar</button>
  <form action="/logout" method="POST">
    <button type="submit">Log Out</button>
  </form>
</div>

    <!-- Formulario oculto -->
    <form id="edit-form" class="editar-formulario" action="/editar-usuario" method="POST">
        <input type="hidden" name="usuario_id" value="<%= usuario_id %>">
        <div class="input-group">
        <label for="username">Usuario:</label>
        <input type="text" name="username" value="<%= username %>" autofocus>
      </div>
      <div class="input-group">
        <label for="nombre">Nombre:</label>
        <input type="text" name="nombre" value="<%= nombre %>" >
      </div>
      <div class="input-group">
        <label for="apellidos">Apellidos:</label>
        <input type="text" name="apellidos" value="<%= apellidos %>">
      </div>
      <div class="input-group">
        <label for="email">Email:</label>
        <input type="email" name="email" value="<%= email %>">
      </div>
      <div class="input-group">
        <label for="telefono">Teléfono:</label>
        <input type="text" name="telefono" value="<%= telefono %>">
      </div>
      <div class="botones">
        <button type="submit">Guardar</button>
      </div>
    </form>
  </div>
</div>
<% if (reservasUsuario && reservasUsuario.length > 0) { %>
  <h3 class="reservas-titulo">Mis Reservas</h3>
  <div class="reservas-grid">
    <% reservasUsuario.forEach(reserva => { %>
      <div class="reserva-card">
        <p><strong>Mesa:</strong> <%= reserva.mesa_id %></p>
        <p><strong>Fecha:</strong> <%= new Date(reserva.fecha_hora).toLocaleString('es-ES') %></p>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <p class="sin-reservas">No tienes reservas activas.</p>
<% } %>

<% if (logros && logros.length > 0) { %>
  <h3 class="logros-titulo">Logros obtenidos</h3>
  <div class="logros-grid">
    <% logros.forEach(logro => { %>
      <div class="logro-card">
        <h4><%= logro.nombre %></h4>
        <p><%= logro.descripcion %></p>
      </div>
    <% }); %>
  </div>
<% } else { %>
  <p class="sin-logros">Este usuario aún no ha obtenido logros.</p>
<% } %>
</div>

<script>
  function toggleForm() {
    const form = document.getElementById('edit-form');
    form.classList.toggle('mostrar');
  }
</script>

